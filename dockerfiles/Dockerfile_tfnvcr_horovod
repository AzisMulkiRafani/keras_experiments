ARG BASECONTAINER=nvcr.io/nvidia/tensorflow:17.07
# FROM nvcr.io/nvidia/tensorflow:17.07
FROM $BASECONTAINER


# Install OpenMPI. Default in Ubuntu 16 is 1.10.2
RUN apt-get update && apt-get install -y \
        mpi-default-dev \
        mpi-default-bin && \
    rm -rf /var/lib/apt/lists/*


